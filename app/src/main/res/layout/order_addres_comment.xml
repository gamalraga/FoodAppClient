<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layoutDirection="ltr"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_addressuser"
            android:fontFamily="@font/brandon_medium"
            android:hint="Enter Address"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Your address"
        android:id="@+id/txt_address_deatials"
        android:fontFamily="@font/brandon_medium"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edcomment"
        android:fontFamily="@font/brandon_medium"
        android:hint="Enter your comment"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/ovelay_color"
        android:textStyle="bold"
        android:text="Delivery Method"
        android:id="@+id/your_address"
        android:fontFamily="@font/brandon_medium"
        />
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdi_home_address"
        android:text="Home Address"
        android:fontFamily="@font/brandon_medium"
        android:textStyle="italic"
        android:checked="true"
        android:textSize="18sp"
        android:textColor="#464646"
        />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdi_ship_this_address"
        android:text="Ship to this address"
        android:fontFamily="@font/brandon_medium"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="#464646"
        />

</RadioGroup>
</LinearLayout>